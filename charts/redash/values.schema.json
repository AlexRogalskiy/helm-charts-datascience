{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "global": {
      "description": "postgres specific configuration",
      "type": "object",
      "title": "Database",
      "properties": {
        "postgresql": {
          "description": "postgres specific configuration",
          "type": "object",
          "title": "Database",
          "properties": {
            "postgresqlUsername": {
              "type": "string",
              "title": "Admin user",
              "default": "admin",
              "x-form": {
                "value": "{{project.id}}"
              }
            },
            "postgresqlPassword": {
              "type": "string",
              "title": "Password",
              "default": "changeme",
              "x-form": {
                "value": "{{project.password}}"
              }
            },
            "postgresqlDatabase": {
              "description": "Name for the default database that is created when the image is first started.",
              "type": "string",
              "title": "Database",
              "default": "redash"
            }
          }
        }
      }
    },    
    "redash": {
      "description": "postgres specific configuration",
      "type": "object",
      "title": "Database",
      "properties": {
        "redash": {
          "description": "redash specific configuration",
          "type": "object",
          "title": "redash",
          "properties": {
            "cookieSecret": {
              "type": "string",
              "title": "Admin user",
              "default": "admin",
              "x-form": {
                "value": "{{project.password}}"
              }
            },
            "secretKey": {
              "type": "string",
              "title": "Password",
              "default": "changeme",
              "x-form": {
                "value": "{{project.password}}"
              }
            }
          }
        }
      }
    },
    "ingress": {
      "type": "object",
      "form": true,
      "title": "Ingress Details",
      "properties": {
        "generate": {
          "type": "boolean",
          "description": "Choose a dns name",
          "default": false
        },
        "hostname": {
            "type": "string",
            "form": true,
            "title": "Hostname",
            "x-form": {
                "hidden": true
            },
            "x-generated": {
                "type": "externalDNS",
                "scope": "redash",
                "name": "ihm"
            }
        },
        "userHostname": {
          "type": "string",
          "form": true,
          "title": "Hostname",
          "hidden": {
            "value": false,
            "path": "ingress/generate"
          },
          "x-form": {
            "value": "{{project.id}}-{{random}}.{{k8.domain}}"
          }
        }      
      }
    }
  }  

}
