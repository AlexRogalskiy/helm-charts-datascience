{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "ingress": {
      "type": "object",
      "form": true,
      "title": "Ingress Details",
      "properties": {
        "hostname": {
          "type": "string",
          "form": true,
          "title": "Hostname",
          "x-form": {
            "value": "{{ingress.hosts.host}}",
            "readonly": false
          }
        },
        "pgadmin": {
          "type": "object",
          "form": "true",
          "properties": {
            "mail": {
              "type": "string",
              "form": true,
              "title": "Nom dutilisateur",
              "x-form": {
                "value": "{{env.mail}}",
                "readonly": false
              }
            },
            "password": {
              "type": "string",
              "form": true,
              "title": "Mot de passe",
              "x-form": {
                "value": "{{env.password}}",
                "readonly": false
              }
            }
          }
        }
      }
    }
  }
}
